{
	"name": "snapfrozen/snapcms",
	"description": "A content management system for developers and clients",
	"license": "MIT",
	"type": "project",
	"minimum-stability": "dev",
	"repositories": {
		"composer-custom-directory-installer": {
			"type": "git",
			"url": "https://github.com/mnsami/composer-installer-plugin.git"
		},
		"kcfinder": {
			"type": "package",
			"package": {
				"name": "kcfinder",
				"version": "3.0",
				"source": {
					"url": "https://github.com/sunhater/kcfinder.git",
					"type": "git",
					"reference": "master"
				}
			}
		},
		"ckeditorwidget": {
			"type": "package",
			"package": {
				"name": "ckeditorwidget",
				"version": "1.0",
				"source": {
					"url": "https://github.com/aqlinux/TheCKEditor.git",
					"type": "git",
					"reference": "master"
				}
			}
		}
	},
	"require": {
		"php": ">=5.3.2",
		"mnabil/composer-custom-directory-installer": "*",
		"yiisoft/yii": "1.1.*",
		"yiiext/migrate-command": "dev-master",
		"drmabuse/yii-bootstrap-3-module": "dev-master",
		"weotch/phpthumb": "dev-master",
		"ckeditor/ckeditor": "dev-full/4.3.x",
		"kcfinder": "3.0.*",
		"ckeditorwidget": "1.0.*"
	},
	"extra": {
		"installer-paths": {
			"public_html/lib/ckeditor": ["ckeditor/ckeditor"],
			"public_html/lib/kcfinder": ["kcfinder"]
		}
	},
	"autoload": {
		"psr-0": {
			"config": "./backend"
		}
	},
	"scripts": {
		"pre-install-cmd": "config\\ComposerCallback::preInstall",
		"post-install-cmd": "config\\ComposerCallback::postInstall",
		"pre-update-cmd": "config\\ComposerCallback::preUpdate",
		"post-update-cmd": "config\\ComposerCallback::postUpdate",
		"post-package-install": ["config\\ComposerCallback::postPackageInstall"],
		"post-package-update": ["config\\ComposerCallback::postPackageUpdate"]
	}
}